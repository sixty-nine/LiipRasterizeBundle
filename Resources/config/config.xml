<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="liip_rasterize.phantomjs.binary">%liip_rasterize.root_dir%/Resources/bin/phantomjs</parameter>
        <parameter key="liip_rasterize.phantomjs.rasterize_script">%liip_rasterize.root_dir%/Resources/bin/rasterize.js</parameter>
        <parameter key="liip_rasterize.xvfb.display">99</parameter>
        <parameter key="liip_rasterize.rasterize_viewport.width">1024</parameter>
        <parameter key="liip_rasterize.rasterize_viewport.height">768</parameter>
        <parameter key="liip_rasterize.cache.path">%kernel.cache_dir%</parameter>
        <parameter key="liip_rasterize.cache.extension">png</parameter>
        <parameter key="liip_rasterize.cache.ttl">300</parameter>
    </parameters>

</container>
